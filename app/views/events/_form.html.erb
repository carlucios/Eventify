<%= form_with model: @event, local: false, html: { style: "display: flex; flex-direction: column; gap: 1rem; max-width: 600px;" } do |f| %>
  <div style="display: flex; flex-direction: column;">
    <%= f.label :title, style: "margin-bottom: 0.3rem; font-weight: bold;" %>
    <%= f.text_field :title, style: "padding: 0.5rem; border: 1px solid #ccc; border-radius: 5px;" %>
  </div>

  <div style="display: flex; flex-direction: column;">
    <%= f.label :description, style: "margin-bottom: 0.3rem; font-weight: bold;" %>
    <%= f.text_area :description, rows: 3, style: "padding: 0.5rem; border: 1px solid #ccc; border-radius: 5px;" %>
  </div>

  <div class="field">
    <%= f.label :start_date %>
    <%= f.datetime_select :start_date %>
  </div>

  <div class="field">
    <%= f.label :end_date %>
    <%= f.datetime_select :end_date %>
  </div>

  <div style="display: flex; flex-direction: column;">
    <%= f.label :address, style: "margin-bottom: 0.3rem; font-weight: bold;" %>
    <%= f.text_field :address, style: "padding: 0.5rem; border: 1px solid #ccc; border-radius: 5px;" %>
  </div>

  <div style="display: flex; gap: 1rem;">
    <div style="flex: 1; display: flex; flex-direction: column;">
      <%= f.label :latitude, style: "margin-bottom: 0.3rem; font-weight: bold;" %>
      <%= f.text_field :latitude, style: "padding: 0.5rem; border: 1px solid #ccc; border-radius: 5px;" %>
    </div>
    <div style="flex: 1; display: flex; flex-direction: column;">
      <%= f.label :longitude, style: "margin-bottom: 0.3rem; font-weight: bold;" %>
      <%= f.text_field :longitude, style: "padding: 0.5rem; border: 1px solid #ccc; border-radius: 5px;" %>
    </div>
  </div>

  <div class="actions" style="margin-top: 1rem;">
    <%= f.submit "Salvar Evento", style: "padding: 0.6rem 1.2rem; border: none; background-color: #007BFF; color: white; border-radius: 5px; cursor: pointer;" %>
  </div>
<% end %>
