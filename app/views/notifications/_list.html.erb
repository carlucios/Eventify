<ul id="notifications-list" style="list-style: none; padding-left: 0; margin: 0;">
  <% if notifications.any? %>
    <% notifications.each do |notification| %>
      <li class="px-4 py-2 border-b text-sm" style="border-color: #ddd;">
        <div style="font-size: 0.8rem; color: #1a202c; line-height: 1.3; <%= 'background-color: #f7fafc; font-weight: 600;' unless notification[:read] %>">
          <%= notification[:message] %>
        </div>
        <div style="font-size: 0.75rem; color: #718096; margin-bottom: 10px; margin-top:0px; text-align: right; font-style: italic; <%= 'background-color: #f7fafc; font-weight: 600;' unless notification[:read] %>">
          <%= l(notification[:created_at], format: :short) %>
        </div>
      </li>
    <% end %>
  <% else %>
    <li class="px-4 py-3 text-center text-gray-500 text-sm">Você não possui notificações</li>
  <% end %>
</ul>
