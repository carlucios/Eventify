<%= form_with model: article, local: false do |f| %>
  <div class="field" style="margin-bottom: 1rem;">
    <%= f.label :title, "Title", style: "display: block; margin-bottom: 0.3rem;" %>
    <%= f.text_field :title, style: "width: 100%; padding: 0.5rem;" %>
  </div>

  <div class="field" style="margin-bottom: 1rem;">
    <%= f.label :abstract, "Abstract", style: "display: block; margin-bottom: 0.3rem;" %>
    <%= f.text_area :abstract, rows: 3, style: "width: 100%; padding: 0.5rem;" %>
  </div>

  <div class="field" style="margin-bottom: 1rem;">
    <%= f.label :file, "File URL", style: "display: block; margin-bottom: 0.3rem;" %>
    <%= f.text_field :file, value: "https://example.com/files/scientific_paper_6284.pd.f", style: "width: 100%; padding: 0.5rem;" %>
  </div>

  <div class="actions">
    <%= f.submit "Save Article", style: "padding: 0.6rem 1rem;" %>
  </div>
<% end %>
